<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign.SignUp3Fragment"
    android:layout_margin="16dp"
    >
    <TextView
        android:id="@+id/signup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/viewNot"
        android:layout_width="52dp"
        android:layout_height="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/davidlogin"
        app:layout_constraintTop_toBottomOf="@id/signup3"
        app:layout_constraintStart_toStartOf="@id/signup3"
        />
    <TextView
        android:id="@+id/continue3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="6dp"
        android:text="@string/continue2"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/viewNot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/continue3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/information_about_garage"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:gravity="fill_horizontal"
        android:text="@string/step_3_4"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/info3"
        app:layout_constraintStart_toStartOf="@id/continue3"
        app:layout_constraintEnd_toEndOf="@id/continue3"
        />
    <LinearLayout
        android:id="@+id/linear_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/step3">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_nameEN_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:autofillHints=""
            android:ems="10"
            android:gravity="center"
            android:hint="@string/garage_name"
            android:inputType="text"
            app:expandedHintEnabled="false"
            android:textColorHint="@color/black" >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/in_english"
                android:textColorHint="#757575"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_nameAr_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/garage_name"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/black"
            android:inputType="textPersonName|textAutoComplete"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:expandedHintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/in_arabic"
                android:textColorHint="#757575"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_price_for_houre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="@string/garage_rent"
            app:expandedHintEnabled="false"
            android:textColorHint="@color/black"
            android:inputType="textPersonName|textAutoComplete"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/per_hour"
                android:inputType="number"
                android:textColorHint="#757575"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_phone_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:maxLines="1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/black"
            app:expandedHintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <Button
        android:id="@+id/getIMG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/enter_a_pic_n_for_garage"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        />
    <LinearLayout
        android:id="@+id/layout_success_3"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getIMG">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/img_success"
            android:src="@drawable/offline" />


        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/img_success"
            android:src="@drawable/offline" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="3dp"
            android:background="@drawable/online"
            android:contentDescription="@string/img_success" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/img_success"
            android:src="@drawable/offline" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sign_in_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/round_btn"
        android:text="@string/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_success_3" />

    <TextView
        android:id="@+id/by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="16dp"
        android:text="@string/by_signning_up_you_agree_with_our"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_amp_conditions"
        app:layout_constraintStart_toEndOf="@id/by"
        app:layout_constraintTop_toTopOf="@id/by"
        android:textColor="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>